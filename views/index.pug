extends layout

block content
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
        link(rel='stylesheet' href='css/main.css')
        title Socket.IO
    body.bg-success
        main.container.text-white
            section.row.justify-content-center.mb-4
                if username
                    .p-4.rounded.d-flex.justify-content-between
                        h1="Bienvenido " + username
                        a.btn.btn-warning(href="/logout") Logout                
            section.row.justify-content-center.mb-4
                h2.text-center.mb-4 Add Product
                form#enviarProducto.col-6.d-flex.flex-column.align-items-center.justify-content-center.border.rounded.py-4(action='')
                    .mb-3
                        label.form-label.text-center.d-block(for='nombre') Name
                        input#nombreProducto.w-100.px-4.form-control(required='' type='text' placeholder='Type product name' name='nombre')
                    .mb-3
                        label.form-label.text-center.d-block(for='precio') Price
                        input#precioProducto.w-100.px-4.form-control(required='' type='text' placeholder='Type product price' name='precio')
                    .mb-3
                        label.form-label.text-center.d-block(for='nombre') image
                        input#urlProducto.w-100.px-4.form-control(required='' type='text' placeholder='Url image' name='url')
                    input.btn.btn-warning(type='submit' value='Enviar')
            section.row.justify-content-center.mb-4
                h4.text-center.mb-4 Products
                table.text-center.table.table-dark.table-striped
                    thead
                        tr
                            td Name
                            td Price
                            td Img
                    tbody#products
            section.row.my-4
                h4.text-center.mb-4 Centro de mensajes
                .bg-light.p-4.rounded
                    .output-message.border.rounded
                        ul#messageOutput.no-dots
                    div
                        form#enviarMensaje.d-flex.flex-row.flex-wrap.justify-content-evenly.text-black(action='#')
                            .col-4.d-flex.justify-content-center.align-items-center
                                label.m-0.mx-2.form-label(for='email') Email
                                input#emailInput.form-control(required='' type='email' placeholder='Ingrese su E-mail...' name='email')
                            .col-4.d-flex.justify-content-center.align-items-center
                                label.m-0.mx-2.form-label(for='message') Mensaje
                                input#messageInput.form-control(required='' type='text' placeholder='Ingrese su mensaje...' name='message')
                            .mt-4.col-6.d-flex.justify-content-center.align-items-center
                                input.btn.btn-warning(type='submit' value='Enviar')
        script(src='https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js')
        script(src='socket.io/socket.io.min.js')
        script(src='js/script.js')
